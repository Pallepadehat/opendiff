{
  "name": "opendiff",
  "version": "0.1.0",
  "description": "A clean and user-friendly visual terminal diff tool built with OpenTUI.",
  "module": "src/index.tsx",
  "type": "module",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pallepadehat/opendiff.git"
  },
  "homepage": "https://github.com/Pallepadehat/opendiff",
  "bugs": {
    "url": "https://github.com/Pallepadehat/opendiff/issues"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "opendiff": "dist/opendiff.js",
    "vd": "dist/opendiff.js"
  },
  "scripts": {
    "dev": "bun run --watch src/index.tsx --",
    "start": "bun run src/index.tsx --",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "build": "bun run build.ts",
    "build:release": "bun run build.ts --release",
    "release:artifact": "./scripts/build-release.sh",
    "release:formula": "bun run scripts/update-homebrew-formula.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@opentui/core": "^0.1.77",
    "@opentui/solid": "^0.1.77",
    "babel-preset-solid": "1.9.9",
    "diff": "^8.0.3",
    "solid-js": "1.9.9"
  }
}